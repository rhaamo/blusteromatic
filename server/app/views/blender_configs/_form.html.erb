<%= form_for @blender_config, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, :class => 'text_field span7',
      :placeholder => "Name of your config, like 'HD with 200 samples'" %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :description, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :description, :class => 'text_area span7', :rows => 4, :placeholder => "A little text to explain your config specifics" %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :config, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :config, :class => 'text_area span7', :rows => 20, :placeholder => "Here is the config content, please double-check for errors !"  %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                blender_configs_path, :class => 'btn' %>
  </div>
<% end %>
