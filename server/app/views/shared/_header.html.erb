<div class="navbar navbar-fixed-top">
  <div class="navbar-inner">
    <div class="container">
      <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
	<span class="icon-bar"></span>
	<span class="icon-bar"></span>
	<span class="icon-bar"></span>
      </a>
      <%= link_to Settings.app_title || "Blusteromatic", root_url, :class => "brand" %>
      <div class="nav-collapse">
	<ul class="nav">
	  <li><%= link_to "Jobs list", root_url %></li>
	</ul> <!-- ul nav -->

	<div class="btn-group pull-right">
            <%= link_to current_user, :class => "btn btn-primary" do %>
	    <i class="icon-user icon-white"></i>
	    <%= current_user.login %>
            <% end %>

            <%= link_to "#", :class => "btn btn-info dropdown-toggle", :"data-toggle" => "dropdown" do %>
	    <span class="caret"></span>
            <% end %>

            <ul class="dropdown-menu">
	      <li>
		<%= link_to edit_user_path(current_user) do %>
		  <i class="icon-pencil"></i>
		  <%= t 'header.edit_profile' %>
		<% end %>
	      </li>

	      <li class="divider"></li>
	      <li>
		<%= link_to destroy_user_session_path, :method => :delete do %>
		  <i class="icon-off"></i>
		  <%= t 'header.logout' %>
		<% end %>
	      </li>
	    </ul>
        </div>
      </div><!--/.nav-collapse -->

    </div>
  </div>
